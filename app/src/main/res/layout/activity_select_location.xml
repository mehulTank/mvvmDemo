<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="locationDataViewModel"
            type="com.cmexpertise.beautyapp.mvvm.locationdata.LocationDataViewModel" />
    </data>


    <LinearLayout
        android:id="@+id/activity_select_location_llMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:background="@color/colorPrimary">

                    <com.cmexpertise.beautyapp.customecomponent.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/activity_select_location_rlSelectLocation"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:text="@string/title_select_location"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_15sdp"
                        app:font_name="RobotoMedium.ttf" />

                    <RelativeLayout
                        android:id="@+id/activity_select_location_rlSelectLocation"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_40sdp"
                        android:background="@drawable/bg_location_textview"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/activity_select_location_tvSelectLocation"
                            android:paddingEnd="@dimen/_5sdp"
                            android:src="@drawable/ic_about_us" />

                        <com.cmexpertise.beautyapp.customecomponent.CustomTextView
                            android:id="@+id/activity_select_location_tvSelectLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="@string/select_location"
                            android:textColor="@color/location_tv_text_color"
                            android:textSize="@dimen/_14sdp"
                            app:font_name="RobotoMedium.ttf"

                            />

                    </RelativeLayout>


                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/activity_select_location_rvCity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_20sdp" />


            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_119sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_4sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/activity_select_location_ivSearchLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:src="@drawable/ic_about_us" />

                    <com.cmexpertise.beautyapp.customecomponent.CustomEdittext
                        android:id="@+id/activity_select_location_etSearchLocation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/activity_select_location_ivSearchLocation"
                        android:background="@android:color/transparent"
                        android:hint="@string/search_location"
                        android:textColor="@color/location_tv_text_color"
                        android:textSize="@dimen/_14sdp"
                        app:font_name="RobotoLight.ttf"

                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </FrameLayout>


    </LinearLayout>

</layout>