<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="storeViewModel"
            type="com.cmexpertise.beautyapp.mvvm.storelist.StoreViewModel" />
    </data>

    <com.cmexpertise.beautyapp.comman.SlidingLinearLayout
        android:id="@+id/fragment_productlist_llContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_productlist_rvProductList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@color/bg_color">

        </android.support.v7.widget.RecyclerView>


        <LinearLayout
            android:id="@+id/fragment_productlist_llLoadMoreProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:visibility="gone">


            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


    </com.cmexpertise.beautyapp.comman.SlidingLinearLayout>

</layout>