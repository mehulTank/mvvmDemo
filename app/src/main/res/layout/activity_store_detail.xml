<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/act_store_detail_cl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fitsSystemWindows="true">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_335sdp"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorPrimary"
                app:expandedTitleTextAppearance="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_300sdp"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/vpGallery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true" />

                        <com.viewpagerindicator.CirclePageIndicator
                            android:id="@+id/indicator"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="bottom"
                            android:padding="10dip"
                            app:centered="true"
                            app:fillColor="#ff0099"
                            app:pageColor="#FF0000"
                            app:snap="false" />
                    </RelativeLayout>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:elevation="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/white">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_7sdp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:orientation="vertical">


                                    <com.cmexpertise.beautyapp.customecomponent.CustomTextView
                                        android:id="@+id/fragment_storeInfo_txt_StoreName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:maxLines="1"
                                        android:text="Kalista Salons &amp; Academy"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/_12sdp"
                                        app:font_name="RobotoMedium.ttf" />


                                    <com.cmexpertise.beautyapp.customecomponent.CustomTextView
                                        android:id="@+id/fragment_storeInfo_txt_StoreAdd"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:drawableStart="@drawable/ic_location_grey"
                                        android:drawablePadding="@dimen/_5sdp"
                                        android:maxLines="1"
                                        android:text="akhbar nagar rajkot"
                                        android:textColor="@color/offBlack"
                                        android:textSize="@dimen/_11sdp"
                                        app:font_name="RobotoRegular.ttf" />


                                </LinearLayout>


                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_call" />


                            </RelativeLayout>


                            <RatingBar
                                android:id="@+id/fragment_store_row_txt_store_rbStore"
                                style="@style/foodRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_17sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/_15sdp" />


                            <com.cmexpertise.beautyapp.customecomponent.CustomTextView
                                android:id="@+id/fragment_storeInfo_txt_Distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:drawableStart="@drawable/ic_location_pink_small"
                                android:drawablePadding="2dp"
                                android:gravity="center"
                                android:text="@string/km_away"
                                android:textColor="@color/offBlack"
                                android:textSize="@dimen/_11sdp"
                                app:font_name="RobotoRegular.ttf" />


                            <com.cmexpertise.beautyapp.customecomponent.CustomTextView
                                android:id="@+id/fragment_storeInfo_txt_opnTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:drawableStart="@drawable/ic_time_new"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="end"
                                android:textColor="@color/offBlack"
                                android:textSize="@dimen/_11sdp"
                                app:font_name="RobotoRegular.ttf" />


                            <com.cmexpertise.beautyapp.customecomponent.CustomTextView
                                android:id="@+id/fragment_storeInfo_txt_AvgRate"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingStart="@dimen/_3sdp"
                                android:paddingEnd="@dimen/_3sdp"
                                android:text="4.5"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp"
                                android:textStyle="bold"
                                android:visibility="gone" />


                        </LinearLayout>


                    </android.support.v7.widget.CardView>
                </LinearLayout>


                <android.support.v7.widget.Toolbar
                    android:id="@+id/activity_setting_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/transparent"
                    android:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                    app:layout_collapseMode="pin"
                    android:layout_marginBottom="@dimen/_40sdp"
                    app:layout_scrollFlags="scroll|enterAlways" />


                <android.support.design.widget.TabLayout
                    android:id="@+id/activity_setting_tlMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/white"
                    app:tabIndicatorColor="@color/colorPrimary"
                    app:tabSelectedTextColor="@color/colorPrimary"
                    app:tabTextColor="@color/offBlack"/>



            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    </android.support.design.widget.CoordinatorLayout>
</layout>