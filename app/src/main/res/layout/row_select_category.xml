<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center|start"
            android:padding="@dimen/_6sdp">


            <com.cmexpertise.beautyapp.customecomponent.CustomTextView
                android:id="@+id/row_select_category_tv_catname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_toStartOf="@+id/row_select_category_cb_select"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                tools:text="Abc" />

            <com.cmexpertise.beautyapp.customecomponent.SmoothCheckBox
                android:id="@+id/row_select_category_cb_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:buttonTint="@color/orange" />
        </RelativeLayout>


    </LinearLayout>

</layout>