<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/bg_offer">


        </ImageView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_22sdp"
            android:orientation="horizontal">


            <android.support.v7.widget.CardView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/colorPrimary" />

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="vertical">


                <com.cmexpertise.beautyapp.customecomponent.CustomTextView
                    android:id="@+id/row_offerlist_tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/about_color"
                    android:maxLines="1"
                    android:text="Amala deldmj"
                    android:textSize="@dimen/_13sdp"
                    app:font_name="RobotoMedium.ttf" />

                <com.cmexpertise.beautyapp.customecomponent.CustomTextView
                    android:id="@+id/row_offerlist_tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_3sdp"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="1"
                    android:text="asdclkjlkjcs ffchkjhjkjkj"
                    android:textSize="@dimen/_12sdp"
                    app:font_name="RobotoMedium.ttf" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <com.cmexpertise.beautyapp.customecomponent.CustomTextView
                        android:id="@+id/row_offerlist_tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/about_color"
                        android:maxLines="1"
                        android:text="14"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="RobotoMedium.ttf" />


                    <com.cmexpertise.beautyapp.customecomponent.CustomTextView
                        android:id="@+id/row_offerlist_tvOfferPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/km_away_color"
                        android:paddingStart="@dimen/_4sdp"
                        android:maxLines="1"
                        android:text="14"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="RobotoMedium.ttf" />


                    <RelativeLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:minWidth="@dimen/_30sdp"
                        android:minHeight="@dimen/_18sdp"
                        android:background="@drawable/backgound_offer"
                        android:layout_height="wrap_content">

                        <com.cmexpertise.beautyapp.customecomponent.CustomTextView
                            android:id="@+id/row_offerlist_tvDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/colorPrimary"
                            android:maxLines="1"
                            android:text="100% off"
                            android:textSize="@dimen/_10sdp"
                            app:font_name="RobotoMedium.ttf" />

                    </RelativeLayout>



                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </FrameLayout>


</layout>

